<div class="container mt-5">
  <h1 class="mb-4">Reservations</h1>

  <%= render 'form', reservation: @reservation %>

  <div class="card">
    <div class="card-header">Existing Reservations</div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Time</th>
            <th>People Amount</th>
            <th>Table(s)</th>
          </tr>
        </thead>
        <tbody id="reservations">
          <%= render partial: 'reservation', collection: @reservations %>
        </tbody>
      </table>
    </div>
  </div>
</div>
